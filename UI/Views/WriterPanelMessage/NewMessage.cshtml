@model EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "NewMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Yazar | Mesaj Oluştur</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/AdminLTE-3.1.0/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminLTE-3.1.0/dist/css/adminlte.min.css">
    <!-- summernote -->
    <link rel="stylesheet" href="~/AdminLTE-3.1.0/plugins/summernote/summernote-bs4.min.css">
</head>
<body class="hold-transition sidebar-mini">


    <br />
    <!-- Main content -->
    <div class="row">
        @await Html.PartialAsync("~/Views/WriterPanelMessage/MessageListMenu.cshtml")
        <!-- /.col -->
        <div class="col-md-9">
            @using (Html.BeginForm("NewMessage", "WriterPanelMessage", FormMethod.Post))
            {
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Yeni Mesaj Oluştur</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="form-group">
                            @Html.Label("Alıcı")
                            @Html.TextBoxFor(x => x.ReceiverMail, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.ReceiverMail, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Konu")
                            @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.Subject, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Mesajınız")
                            <textarea id="compose-textarea" name="MessageContent" class="form-control" style="height: 300px">

                                </textarea>
                        </div>
                        <div class="form-group">
                            <div class="btn btn-default btn-file">
                                <i class="fas fa-paperclip"></i> Dosya Ekle
                                <input type="file" name="attachment">
                            </div>
                            <p class="help-block">Max. 32MB</p>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <div class="float-right">
                            <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Taslaklara Kaydet</button>
                            <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                        </div>
                        <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> İptal Et</button>
                    </div>
                    <!-- /.card-footer -->
                </div>
            }
        </div>
    </div>

    <script src="~/AdminLTE-3.1.0/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/AdminLTE-3.1.0/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/AdminLTE-3.1.0/dist/js/adminlte.min.js"></script>
    <!-- Summernote -->
    <script src="~/AdminLTE-3.1.0/plugins/summernote/summernote-bs4.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/AdminLTE-3.1.0/dist/js/demo.js"></script>
    <!-- Page specific script -->
    <script>
        $(function () {
          //Add text editor
          $('#compose-textarea').summernote()
        })
    </script>
</body>
</html>


