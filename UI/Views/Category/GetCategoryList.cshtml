@using EntityLayer.Concrete
@model List<Category>
<!DOCTYPE html>
<html>
<head>
    <title>Category|List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <h2>Kategori Listeleme</h2>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Adı</th>
                <th>Açıklama</th>
                <th>Durum</th>
                <th>Sil|Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var category in Model) {
                <tr>
                    <td>@category.CategoryId</td>
                    <td>@category.CategoryName</td>
                    <td>@category.CategoryDescription</td>
                    <td>@category.CategoryStatus</td>
                    <td>
                        <button class="btn btn-outline-danger btn-sm">Kategori Sil</button>
                        <button class="btn btn-outline-warning btn-sm">Kategori Güncelle</button>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
    <a class="btn btn-outline-info" href="/Category/AddCategory">Kategori Ekle</a>
</body>
</html>