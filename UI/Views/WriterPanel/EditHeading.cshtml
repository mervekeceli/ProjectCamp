@model EntityLayer.Concrete.Heading
@{
    ViewData["Title"] = "EditHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<br />
<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-lg-12 col-md-12">
            <!-- jquery validation -->
            <div class="card card-warning">
                <div class="card-header">
                    <h3 class="card-title">Başlık Güncelle</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                @using (Html.BeginForm("EditHeading", "WriterPanel", FormMethod.Post))
                {
                    <div class="card-body">
                        <div class="form-group">
                            @Html.HiddenFor(x => x.HeadingId, new { @class = "form-control" })
                            @Html.HiddenFor(x => x.WriterId, new { @class = "form-control" })
                            @Html.HiddenFor(x => x.HeadingDate, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Başlık Adı")
                            @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.HeadingName)
                        </div>

                        <div class="form-group">
                            @Html.Label("Kategori")
                            @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
                        </div>
                        <button class="btn btn-warning">Güncelle</button>
                    </div>
                }
            </div>
            <!-- /.card -->
        </div>
        <!--/.col (left) -->
    </div>
    <!-- /.row -->
</div><!-- /.container-fluid -->
