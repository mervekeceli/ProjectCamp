@model EntityLayer.Concrete.Heading
@{
    ViewData["Title"] = "NewHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<br />

<div class="col-md-12 col-lg-12 col-sm-12">
    <!-- general form elements -->
    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title">Başlık Ekle</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        @using (Html.BeginForm("NewHeading", "WriterPanel", FormMethod.Post))
        {
            <div class="card-body">
                <div class="form-group">
                    @Html.Label("Başlık Adı")
                    @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.HeadingName, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.Label("Kategori")
                    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.CategoryId, null, new { @class = "text-danger" })
                </div>
                
                <button type="submit" class="btn btn-info">Kaydet</button>
            </div>
        }
    </div>
    <!-- /.card -->
</div>